<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Invoice Form View -->
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.inherit.global.discount</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add global discount field for customer invoices -->
            <xpath expr="//field[@name='invoice_payment_term_id']" position="after">
                <field name="global_discount_ids" widget="many2many_tags"
                       options="{'color_field': 'id'}"
                       placeholder="Select global discounts..."
                       readonly="state != 'draft'"
                       invisible="move_type not in ('out_invoice', 'out_refund')"/>
            </xpath>
        </field>
    </record>

    <!-- Invoice Search View -->
    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">account.move.search.inherit.global.discount</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='late']" position="after">
                <separator/>
                <filter string="With Global Discounts" name="has_global_discounts"
                        domain="[('global_discount_ids', '!=', False), ('move_type', 'in', ['out_invoice', 'out_refund'])]"/>
            </xpath>
        </field>
    </record>
</odoo>

